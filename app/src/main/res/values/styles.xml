<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme_Day">
        <item name="main_bg">@color/bg_main_day</item>
        <item name="main_textcolor">@color/textcolor_main_day</item>
        <item name="toolbar_bg">@color/bg_toolbar_day</item>
        <item name="tab_bg">@color/bg_tab_day</item>
        <item name="head_bg">@color/bg_head_day</item>
        <item name="head_view_color">@color/color_view_head_day</item>
    </style>

    <style name="Theme_Night">
        <item name="main_bg">@color/bg_main_night</item>
        <item name="main_textcolor">@color/textcolor_main_night</item>
        <item name="toolbar_bg">@color/bg_toolbar_night</item>
        <item name="tab_bg">@color/bg_tab_night</item>
        <item name="head_bg">@color/bg_head_night</item>
        <item name="head_view_color">@color/color_view_head_night</item>
    </style>

</resources>
