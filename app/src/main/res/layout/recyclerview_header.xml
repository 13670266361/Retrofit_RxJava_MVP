<?xml version="1.0" encoding="utf-8"?>
<com.example.y.mvp.utils.theme.widget.ThemeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?attr/head_bg"
    tools:ignore="Overdraw">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/head_marginRight"
        android:layout_marginTop="@dimen/head_marginTop"
        android:background="@drawable/day"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/head"
        tools:ignore="ContentDescription" />

    <com.example.y.mvp.utils.theme.widget.ThemeView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/head_view_color" />

</com.example.y.mvp.utils.theme.widget.ThemeRelativeLayout>