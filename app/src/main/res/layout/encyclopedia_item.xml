<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/image_detail_margin"
    android:layout_marginEnd="@dimen/image_detail_margin"
    android:layout_marginStart="@dimen/image_detail_margin"
    android:layout_marginTop="@dimen/image_detail_margin"
    app:cardCornerRadius="@dimen/image_detail_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_encyclopedia_iamge_width"
            android:layout_height="@dimen/image_encyclopedia_iamge_height"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/encyclopedia_title_marginLeft"
            android:layout_marginTop="@dimen/encyclopedia_title_marginTop"
            android:layout_toRightOf="@+id/image"
            android:textSize="@dimen/encyclopedia_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/encyclopedia_title_marginLeft"
            android:layout_marginTop="@dimen/encyclopedia_title_marginTop"
            android:layout_toRightOf="@+id/image"
            android:autoLink="web"
            android:textSize="@dimen/encyclopedia_text_message"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
